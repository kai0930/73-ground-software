{
  "name": "ground-software",
  "version": "1.0.0",
  "description": "C73J Ground Software",
  "main": "./out/main/index.js",
  "author": "https://github.com/kai0930",
  "homepage": "https://github.com/kai0930/73_ground_software",
  "scripts": {
    "format": "tsr generate && prettier --write src/renderer/src/**/*.{ts,tsx} && eslint src/renderer/src/**/*.{ts,tsx} --fix --quiet",
    "lint": "tsr generate && eslint src/renderer/src/**/*.{ts,tsx} --fix --quiet",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "tsr generate && concurrently \"tsr watch\" \"electron-vite dev\"",
    "build": "tsr generate && npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "tsr generate && npm run build && electron-builder --dir",
    "build:win": "tsr generate && npm run build && electron-builder --win",
    "build:mac": "tsr generate && npm run build && electron-vite build && electron-builder --mac",
    "build:linux": "tsr generate && npm run build && electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tanstack/react-router": "^1.102.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "electron-updater": "^6.1.7",
    "lucide-react": "^0.475.0",
    "serialport": "^13.0.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@tanstack/router-cli": "^1.102.6",
    "@tanstack/router-devtools": "^1.102.5",
    "@tanstack/router-plugin": "^1.102.6",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^33.0.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "postcss": "^8.5.2",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  }
}
